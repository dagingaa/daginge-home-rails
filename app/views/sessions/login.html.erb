<h1>Log in</h1>  

<%= form_tag sessions_authenticate_path do %>  
  <fieldset>
    <legend>Login</legend>
  <div class="type-text">  
    <%= label_tag :email %><br>  
    <%= text_field_tag :email, params[:email] %>  
  </div>  
  <div class="type-text">  
    <%= label_tag :password %><br> 
    <%= password_field_tag :password %>  
  </div>  
  <div class="type-checkbox">
    <%= label_tag :remember_me %><br>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
  </div>
</fieldset>
  <div class="type-button"><%= submit_tag "Log in", :class => "submit" %></div>  
<% end %>  
